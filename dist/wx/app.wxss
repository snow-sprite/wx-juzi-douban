@import "common/vendor.wxss";

@charset "UTF-8";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.zl-movie-box {
  height: 100vh;
}
.zl-movie {
  padding: 0 21.333rpx;
  padding-top: 21.333rpx;
}
.zl-movie__title {
  font-size: 42.667rpx;
  font-weight: 450;
  margin-bottom: 21.333rpx;
}
.zl-movie__title--time {
  font-size: 32rpx;
}
.zl-movie__title--more {
  float: right;
}
.zl-movie__title--more > ._span {
  font-size: 32rpx;
  font-style: normal;
  font-weight: normal;
  color: #808080;
  display: inline-block;
  vertical-align: middle;
}
.zl-movie__title--more > ._img {
  width: 26.667rpx;
  height: 26.667rpx;
  margin-left: 13.333rpx;
  display: inline-block;
  vertical-align: middle;
}
.zl-movie__list {
  box-sizing: border-box;
  margin-bottom: 21.333rpx;
}
.zl-movie__item {
  width: calc((100% - 40rpx) / 3);
  margin-right: 20rpx;
  display: flex;
  float: left;
  flex-direction: column;
  justify-content: space-between;
}
.zl-movie__item:nth-child(3n) {
  margin-right: 0;
}
.zl-movie__item--thumb {
  height: 346.66700000000003rpx;
  width: 100%;
  background-size: 100% 100%;
}
.zl-movie__item--mask {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.4;
}
.zl-movie__item--title {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 32rpx;
}
.zl-movie__item--star {
  width: 21.333rpx;
  height: 21.333rpx;
}
.zl-movie__item--score {
  color: #666;
  font-size: 26.667rpx;
  margin-left: 8rpx;
}
.zl-movie__clear {
  width: 0;
  height: 0;
  clear: both;
}@charset "UTF-8";

page {
  background: "#faf9fe";
  font-family: "open sans","PingFang SC","Lantinghei SC","Helvetica Neue",Helvetica,Arial,"Microsoft YaHei","sans-serif";
  height: 100%;
}

.night-text {
  color: #666 !important;
}

.night-bg {
  background: #232323 !important;
}