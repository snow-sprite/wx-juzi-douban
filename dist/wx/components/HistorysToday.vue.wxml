<template name="394c3735">
  <scroll-view class="_scroll-view data-v-9c3db918 zl-history-box" scroll-y upper-threshold="50" lower-threshold="50" enable-back-to-top="true">
    <view class="_ul data-v-9c3db918 zl-history">
      <view class="_li data-v-9c3db918 zl-history__item" wx:key="ind" key="{{ind}}" wx:for="{{historyStoryList}}" wx:for-index="ind" wx:for-item="story">
        <view class="_ul data-v-9c3db918 zl-history__item--info">
          <view class="_li data-v-9c3db918 zl-history__item--title">{{ story.title }}</view>
          <view class="_li data-v-9c3db918 zl-history__item--publish"><label class="_span data-v-9c3db918 zl-history__item--time">{{ story.year }}.{{ story.month < 10 ? '0'+story.month : story.month }}.{{ story.day < 10 ? '0'+story.day : story.day  }}</label>
            <image class="_img data-v-9c3db918 zl-history__tag" src="/static/img/history/tag.svg" alt></image> <label class="_span data-v-9c3db918 zl-history__item--tag">历史上的今天</label>
          </view>
        </view>
        <view class="_div data-v-9c3db918 zl-history__item--thumb">
          <image src="{{story.picUrl ? story.picUrl : '../../static/img/history/fail.png'}}" alt onerror="{{defaultThumb}}" class="_img data-v-9c3db918"></image>
        </view>
      </view>
    </view>
  </scroll-view>
</template>