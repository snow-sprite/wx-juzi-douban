      <view class="_p data-v-71b93cfc zl-movie__item--mask" hidden="{{!(isNightMode)}}"></view>
    </view> <label class="_span data-v-71b93cfc zl-movie__item--title {{[isNightMode ? 'night-text' : '']}}">{{ movie.title }}</label>
